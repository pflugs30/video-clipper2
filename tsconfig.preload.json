{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist-electron",
    "rootDir": "electron",
    "types": ["node"]
  },
  "include": ["electron/preload.ts"],
  "exclude": ["node_modules", "dist", "src", "electron/main.ts"]
}
